<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="mysqlDao" class="com.dao.UserDaoMysqlImpl"></bean>
    <bean id="oracleDao" class="com.dao.UserDaoOracleImpl"></bean>
    <bean id="serviceImpl" class="com.service.UserServiceImpl">
        <property name="userDao" ref="mysqlDao"></property>
    </bean>

</beans>